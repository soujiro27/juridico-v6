{% extends 'layoutTable.twig' %}


{% block order %}
    <div class="order">
        <button class="btn btn-warning" id="btn-order">Ordernar Registros</button>
        <form action="/SIA/juridico/DocumentosGral" class="form-order form-inline" id="form-order">

            <select name="campo" id="campo" required class="form-control">
                <option value="">Campo</option>
                <option value="folio">Folio</option>
                <option value="nombre">Tipo</option>
                <option value="idRemitente">Remitente</option>
                <option value="estadoProceso">Estado</option>
            </select>
            <select name="tipo" id="tipo" required class="form-control">
                <option value="">Tipo</option>
                <option value="asc">Ascendente</option>
                <option value="desc">Descendente</option>
            </select>
            
            <input type="submit" value="Ordenar" class="btn btn-info">
        </form>
    </div>
{% endblock %}

{% block table %}
    <table class="table table-hover" id="main-table-files" data-ruta="DocumentosGral">
        <tr>
            <th class="hidden">id</th>
            <th scope="col">Folio</th>
            <th scope="col">Sub Folio</th>
            <th scope="col">Documento</th>
            <th scope="col">Tipo</th>
            <th scope="col">Remitente</th>
            <th scope="col">Archivo</th>
            <th scope="col">Estado</th>

        </tr>
        {% for documento in documentos %}
            <tr>

                <td class="hidden">{{ documento.idVolante }}</td>
                <td>{{ documento.folio }}</td>
                <td>{{ documento.subFolio }}</td>
                <td>{{ documento.numDocumento }}</td>
                <td>{{ documento.nombre }}</td>
                <td>{{ documento.idRemitente }}</td>
                {% if documento.anexoDoc | length < 1 %}
                    <td class="sa">Sin Asignar</td>
                {% else %}
                    <td>{{ documento.anexoDoc }}</td>
                {% endif %}

                {% if documento.estadoProceso == 'CERRADO' %}
                    <td class="cerrado">{{ documento.estadoProceso }}</td>
                {% else %}
                    <td>{{ documento.estadoProceso }}</td>
                {% endif %}


            </tr>
        {% endfor %}
    </table>

{% endblock %}