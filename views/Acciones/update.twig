{% extends 'layoutForm.twig' %}
{% block title %}Actualizar Registro{% endblock %}
{% block form %}
    <form id="Acciones" method="POST" action="/SIA/juridico/Acciones/update" data-ruta="Acciones">
        <div class="form-group row">
            <label class="form-control-label col-lg-1" for="nombre">Nombre </label>
            <input class="form-control col-lg-2" id="nombre" type="text" placeholder="Nombre" required="" pattern="[A-Za-z].{1,10}" name="nombre" title="Nombre Incorrecto o Caracteres maximos" value="{{ accion.nombre }}"/>
        </div>
        <div class="form-group row">
            <label class="form-control-label col-lg-1" for="estatus">Estatus</label>
            <select name="estatus" id="estatus" class="form-control col-lg-2">
                {% if accion.estatus | trim =='ACTIVO' %}
                    <option value="ACTIVO" selected>ACTIVO</option>
                    <option value="INACTIVO" >INACTIVO</option>
                {% else %}
                    <option value="ACTIVO" >ACTIVO</option>
                    <option value="INACTIVO" selected>INACTIVO</option>
                {% endif %}
            </select>
            <input type="hidden" name="idAccion" value="{{ accion.idAccion }}">
        </div>
        <div class="form-group send">
            <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/>
            <button class="btn btn-danger btn-sm" id="cancelar">Cancelar</button>
        </div>
    </form>
    {% if err %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{ err }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
{% endblock %}