{% extends 'layoutTable.twig' %}



{% block btnHeader %}
    <a id="addRegister" href="/SIA/juridico/public/IRAC.php/?param1={{ idVolante }}" target="_blank" class="btn btn-warning btn-add" role="button">
        Imprimir Cedula
    </a>
    {% if close %}
        <a id="addRegister" href="/SIA/juridico/CedulaIrac/add/{{ idVolante }}" class="btn btn-warning btn-add" role="button">
            Generar Cedula
        </a>
        <a id="addRegister" href="/SIA/juridico/observacionesIrac/add/{{ idVolante }}" class="btn btn-info btn-add" role="button">
            AÃ±adir Observacion
        </a>
    {% endif %}

{% endblock %}

{% block table %}
    {% if err %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>AVISO: </strong> {{ err }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <table class="table table-hover" data-ruta="Irac" id="main-table-observaciones-irac">
        <thead>

        <tr>
            <th class="hidden">id</th>
            <th scope="col">Pagina</th>
            <th scope="col">Parrafo</th>
            <th scope="col">Observacion</th>
            <th scope="">Estatus</th>

        </tr>
        </thead>
        {% for observacion in observaciones %}
            <tr>

                <td class="hidden">{{ observacion.idObservacionDoctoJuridico }}</td>
                <td>{{ observacion.pagina }}</td>
                <td>{{ observacion.parrafo }}</td>

                <td>{{ observacion.observacion }}</td>

                <td>{{ observacion.estatus }}</td>



            </tr>
        {% endfor %}
    </table>
{% endblock %}