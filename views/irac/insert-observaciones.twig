{% extends 'layoutForm.twig' %}
{% block title %}AÃ±adir Registro{% endblock %}
{% block form %}

    <form class="form-inline" id="ObservacionesDoctosJuridico" method="POST" action="/SIA/juridico/observacionesIrac/add" data-ruta="Irac">
        <div class="datos">
            <div class="form-group pagina">
                <label for="text">Hoja</label>
                <input class="form-control" id="pagina" type="text" name="pagina" required=""/>
                <input id="idVolante" type="hidden" name="idVolante" value="{{ idVolante }}" />
                <input id="cveAuditoria" type="hidden" name="cveAuditoria" value="{{ cveAuditoria }}" />
                <input id="idSubTipoDocumento" type="hidden" name="idSubTipoDocumento" value="{{ idSubTipoDocumento }}" />
            </div>
            <div class="form-group parrafo">
                <label for="parrafo">Parrafo</label>
                <input class="form-control" id="parrafo" type="text" name="parrafo" required=""/>
            </div>
        </div>
        <div class="form-group observacion">
            <label for="observacion">Observacion</label>
            <textarea class="form-control" id="ckeditor" rows="3" name="observacion"></textarea>

        </div>
        <div class="envio">
            <div class="form-group send">
                <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/>
                <button class="btn btn-danger" id="cancelar">Cancelar</button>
            </div>
        </div>
    </form>
    {% if err %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{ err }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
{% endblock %}