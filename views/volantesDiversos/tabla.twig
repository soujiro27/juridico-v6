{% block table %}
    <table class="table table-hover"  id="main-table" data-ruta="VolantesDiversos">
        <tr>
            <th class="hidden">id</th>
            <th>Folio</th>
            <th>Sub Folio</th>
            <th>Documento</th>
            <th>Remitente</th>
            <th>Turnado</th>
