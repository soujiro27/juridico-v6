{% extends 'layoutForm.twig' %}
{% block title %}AÃ±adir Registro{% endblock %}
{% block btnHeader %}
    <a id="addRegister" href=" /SIA/juridico/public/Confronta.php?param1={{ confrontas.idVolante }}" class="btn btn-warning btn-add" role="button" target="_blank">
        Imprimir Cedula
    </a>
{% endblock %}
{% block form %}

    {% if err %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>AVISO!</strong> {{ err }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <form class="form" id="confrontasJuridico" method="POST" action="/SIA/juridico/confrontasJuridico/update" data-ruta="confrontasJuridico">
        {% if nota=='SI' %}
            <div class="group-nota ">
                <div class="form-group notaInformativa row">
                    <label for="notaInformativa" class="col-lg-2">nota Informativa</label>

                    <input class="form-control col-lg-2" id="notaInformativa" type="text" placeholder="nota Informativa" name="notaInformativa" value="{{ confrontas.notaInformativa }}"/>
                </div>
            </div>
        {% endif %}
        <div class="group-datos">
            <div class="form-group nombre row">
                <label for="nombre" class="col-lg-2">Nombre</label>
                <input class="form-control col-lg-2" id="nombre" type="text" placeholder="Nombre" required="" pattern="[A-Za-z].{1,49}" name="nombreResponsable" title="Formato Incorrecto" value="{{ confrontas.nombreResponsable }}"/>
            </div>
            <div class="form-group cargo row">
                <label for="cargo" class="col-lg-2">Cargo</label>
                <input class="form-control col-lg-2" id="cargo" type="text" placeholder="cargo" required="" pattern="[A-Za-z].{1,49}" name="cargoResponsable" title="Formato Incorrecto" value="{{ confrontas.cargoResponsable }}"/>
            </div>
            <div class="form-group fConfronta row">
                <label for="fConfronta" class="col-lg-2">Fecha Confronta</label>
                <input class="form-control fechaInput col-lg-2" id="fConfronta" type="text" name="fConfronta" required="" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" value="{{ confrontas.fConfronta }}" />
            </div>
            <div class="form-group hConfronta row">
                <label for="hConfronta" class="col-lg-2">Hora de Confronta</label>
                <input class="form-control col-lg-2" id="hConfronta" type="time" required="" pattern="([0-1]{1}[0-9]{1}|20|21|22|23):[0-5]{1}[0-9]{1}" placeholder="00:00" name="hConfronta" title="Formato Incorrecto" value="{{ confrontas.hConfronta | hora }}" />
            </div>
            <div class="form-group fecha row">
                <label for="fecha" class="col-lg-2">Fecha Documento</label>
                <input class="form-control fechaInput col-lg-2" id="fOficio" type="text" name="fOficio" required="" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" value="{{ confrontas.fOficio }}"/>
            </div>
        </div>
        <div class="group-firmas">
            <div class="form-group siglas row">
                <label for="siglas" class="col-lg-2">Siglas</label>
                <input class="form-control col-lg-2" id="siglas" type="text" placeholder="siglas" required="" name="siglas" title="Nombre Incorrecto o Caracteres maximos" value="{{ confrontas.siglas }}"/>
            </div>
            <div class="form-group numFolio row">
                <label for="numFolio" class="col-lg-2">Numero Documento</label>
                <input class="form-control col-lg-2" id="numFolio" type="text" name="numFolio" required="" value="{{ confrontas.numFolio }}"/>
                <input id="idVolante" type="hidden" name="idVolante" value="{{ confrontas.idVolante }}" />
                <input type="hidden" name="idConfrontaJuridico" value="{{ confrontas.idConfrontaJuridico }}">
            </div>

        </div>
        <div class="form-group send">
            {% if close %}
                <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/>
            {% endif %}
            <button class="btn btn-danger" id="cancelar">Cancelar</button>
        </div>
    </form>

{% endblock %}