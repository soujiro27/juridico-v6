{% extends 'layoutForm.twig' %}
{% block title %}Subir Archivo{% endblock %}
{% block form %}
    <form id="documentosJur" class="form" enctype="multipart/form-data" method="post" action="/SIA/juridico/Documentos/update" data-ruta="DocumentosGral">

        <div class="form-group row">
            <label class="form-control-label col-lg-2" for="documento">Arhivos Asignados</label>
            {% if nombre == NULL %}
                <a href="#!" class="col-lg-3"><strong>No hay Documento Asignado</strong></a>
            {% else %}
                <a href="/SIA/juridico/public/files/{{ nombre }}" class="col-lg-8" target="_blank">{{ nombre }}</a>
            {% endif %}
            <input type="hidden" name="idVolante" value="{{ idVolante }}">
        </div>

        <div class="form-group file row">
            <label class="form-control-label col-lg-2" for="documento">Archivo</label>
            <input type="file" class="col-lg-5" name="anexoDoc" id="imagen" required="required"/>
        </div>

        <div class="form-group send">
            <input class="btn btn-info" type="submit" value="Guardar"/>
            <button class="btn btn-danger btn-sm" id="cancelar">Cancelar</button>
        </div>
    </form>

    {% if err %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{ err }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
{% endblock %}